global:
  env:
    - APP_ENV: production
    - DB_HOST: 'MAP:DATABASE1_HOST'
    - DB_DATABASE: 'MAP:DATABASE1_NAME'
    - DB_USERNAME: 'MAP:DATABASE1_USER'
    - DB_PASSWORD: 'MAP:DATABASE1_PASS'
    - SESSION_DRIVER: redis

build:
  before_exec:
    - 'rm -rf puphet'
    - 'rm Vagrantfile'
    - 'rm -rf public/img'
    - 'rm -rf html'
  exec:
    - 'COMPOSER_DISCARD_CHANGES=true'
    - 'composer install --no-interaction --prefer-source --no-dev'
  after_exec:
    - 'composer dump-autoload --optimize'
  lib_dirs:
    - vendor
  reuse_libs: true

web1:
  type: php
  version: 5.6
  php_extensions:
    - json
    - mbstring
    - mcrypt
    - pdo_mysql
    - redis
    - curl
    - zip
  httpd_document_root: public
  php_session_save_handler: redis
  php_session_save_path: "tcp://${CACHE1_HOST}:${CACHE1_PORT}"
  network_dirs:
    - tmp/
  nonpersistent_writable_dirs:
    - data/cache
  after_deploy:
    - 'php vendor/bin/phinx migrate -c config/phinx.php -e prod'
    - 'php vendor/bin/phinx seed:run -c config/phinx.php -e prod --seed GameSeed'

database1:
  type: mysql
  version: 5.6

cache1:
  type: redis

storage1:
  type: nfs