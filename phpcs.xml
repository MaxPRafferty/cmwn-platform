<?xml version="1.0"?>
<ruleset name="CMWN Coding standards">
    <description>CMWN Coding standards</description>

    <!-- display progress -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Fail if there are fixmes and warn for todo -->
    <rule ref="Generic.Commenting.Fixme"/>
    <rule ref="Generic.Commenting.Todo"/>

    <!-- We Hate Commented code -->
    <rule ref="Squiz.PHP.CommentedOutCode"/>

    <!-- Paths to check -->
    <file>./module</file>
    <file>./test</file>
</ruleset>